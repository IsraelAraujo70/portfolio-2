{
  "name": "portfolio-monorepo-root",
  "private": true,
  "workspaces": ["frontend"],
  "scripts": {
    "prepare": "husky",
    "db:up": "cd api && docker compose up -d",
    "dev:frontend": "turbo run dev --filter=frontend",
    "dev:api": "cd api && go run main.go",
    "dev": "bun run db:up && concurrently -n \"API,FRONT\" -c \"blue,magenta\" \"bun run dev:api\" \"bun run dev:frontend\"",
    "build": "turbo run build",
    "build:frontend": "turbo run build --filter=frontend",
    "test": "concurrently -n \"API,FRONT\" -c \"blue,magenta\" \"cd api && go test ./...\" \"turbo run test --filter=frontend\"",
    "test:frontend": "turbo run test --filter=frontend",
    "lint": "turbo run lint",
    "format": "turbo run format"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "husky": "^9.0.11",
    "turbo": "^2.5.4"
  },
  "packageManager": "bun@1.2.17"
}
