{
  "endpoint": "/api/users/:id",
  "method": "PUT",
  "description": "Update user by ID (admin only)",
  "flow": [
    {
      "type": "action",
      "name": "auth",
      "path": "shared/validateAuth"
    },
    {
      "type": "condition",
      "if": "!${auth.valid}",
      "then": [
        {
          "type": "return",
          "status": 401,
          "body": {
            "error": "${auth.error}"
          }
        }
      ]
    },
    {
      "type": "action",
      "name": "adminCheck",
      "path": "shared/requireAdmin"
    },
    {
      "type": "condition",
      "if": "!${adminCheck.allowed}",
      "then": [
        {
          "type": "return",
          "status": 403,
          "body": {
            "error": "${adminCheck.error}"
          }
        }
      ]
    },
    {
      "type": "action",
      "name": "result",
      "path": "users/update"
    },
    {
      "type": "condition",
      "if": "!${result.success}",
      "then": [
        {
          "type": "return",
          "status": 400,
          "body": {
            "error": "${result.error}"
          }
        }
      ]
    },
    {
      "type": "return",
      "status": 200,
      "body": "${result.user}"
    }
  ]
}
