{
  "endpoint": "/api/auth/me",
  "method": "GET",
  "description": "Get current authenticated user profile",
  "flow": [
    {
      "type": "action",
      "name": "auth",
      "path": "shared/validateAuth"
    },
    {
      "type": "condition",
      "if": "!${auth.valid}",
      "then": [
        {
          "type": "return",
          "status": 401,
          "body": {
            "error": "${auth.error}"
          }
        }
      ]
    },
    {
      "type": "action",
      "name": "result",
      "path": "auth/getMe"
    },
    {
      "type": "condition",
      "if": "!${result.success}",
      "then": [
        {
          "type": "return",
          "status": 404,
          "body": {
            "error": "${result.error}"
          }
        }
      ]
    },
    {
      "type": "return",
      "status": 200,
      "body": "${result.user}"
    }
  ]
}
