{
  "endpoint": "/api/auth/change-password",
  "method": "PUT",
  "description": "Change password for authenticated user",
  "flow": [
    {
      "type": "action",
      "name": "auth",
      "path": "shared/validateAuth"
    },
    {
      "type": "condition",
      "if": "!${auth.valid}",
      "then": [
        {
          "type": "return",
          "status": 401,
          "body": {
            "error": "${auth.error}"
          }
        }
      ]
    },
    {
      "type": "action",
      "name": "result",
      "path": "auth/changePassword"
    },
    {
      "type": "condition",
      "if": "!${result.success}",
      "then": [
        {
          "type": "return",
          "status": 400,
          "body": {
            "error": "${result.error}"
          }
        }
      ]
    },
    {
      "type": "return",
      "status": 200,
      "body": {
        "message": "${result.message}"
      }
    }
  ]
}
