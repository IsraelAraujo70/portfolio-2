{
  "endpoint": "/api/auth/login",
  "method": "POST",
  "description": "User login - returns user and JWT token",
  "flow": [
    {
      "type": "action",
      "name": "result",
      "path": "auth/login"
    },
    {
      "type": "condition",
      "if": "!${result.success}",
      "then": [
        {
          "type": "return",
          "status": 400,
          "body": {
            "error": "${result.error}"
          }
        }
      ]
    },
    {
      "type": "return",
      "status": 200,
      "body": {
        "user": "${result.user}",
        "token": "${result.token}"
      }
    }
  ]
}
